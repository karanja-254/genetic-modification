<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Genetic Risk Reports</h1>
    <p class="mt-2 text-gray-600">AI-powered analysis of your genetic risk factors</p>
  </div>

  <div class="mb-6">
    <form method="POST" action="/predictions/generate">
      <button
        type="submit"
        class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition font-medium shadow-md"
      >
        Generate New Risk Report
      </button>
    </form>
  </div>

  <% if (predictions && predictions.length > 0) { %>
  <div class="space-y-6">
    <% predictions.forEach(prediction => { %>
    <div class="bg-white shadow-md rounded-lg border border-gray-200 p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-24 h-24 rounded-full <%= prediction.risk_score >= 70 ? 'bg-red-100' : prediction.risk_score >= 40 ? 'bg-yellow-100' : 'bg-green-100' %> flex items-center justify-center">
            <div class="text-center">
              <div class="text-3xl font-bold <%= prediction.risk_score >= 70 ? 'text-red-600' : prediction.risk_score >= 40 ? 'text-yellow-600' : 'text-green-600' %>">
                <%= prediction.risk_score %>
              </div>
              <div class="text-xs text-gray-600">Risk Score</div>
            </div>
          </div>
        </div>

        <div class="ml-6 flex-1">
          <div class="flex items-center mb-2">
            <h3 class="text-xl font-semibold text-gray-900">
              Risk Assessment Report
            </h3>
            <span class="ml-3 px-3 py-1 text-sm font-semibold rounded-full <%= prediction.risk_score >= 70 ? 'bg-red-100 text-red-800' : prediction.risk_score >= 40 ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
              <%= prediction.risk_score >= 70 ? 'High Risk' : prediction.risk_score >= 40 ? 'Medium Risk' : 'Low Risk' %>
            </span>
          </div>

          <p class="text-gray-700 mb-4"><%= prediction.condition_summary %></p>

          <div class="flex items-center text-sm text-gray-500">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Generated: <%= new Date(prediction.created_at).toLocaleString() %>
            <% if (prediction.updated_at !== prediction.created_at) { %>
            <span class="ml-4">Updated: <%= new Date(prediction.updated_at).toLocaleString() %></span>
            <% } %>
          </div>
        </div>
      </div>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <h4 class="text-sm font-semibold text-gray-900 mb-3">Understanding Your Risk Score</h4>
        <div class="grid grid-cols-3 gap-4 text-sm">
          <div class="text-center p-3 bg-green-50 rounded-lg">
            <div class="font-semibold text-green-800">0-39</div>
            <div class="text-gray-600">Low Risk</div>
          </div>
          <div class="text-center p-3 bg-yellow-50 rounded-lg">
            <div class="font-semibold text-yellow-800">40-69</div>
            <div class="text-gray-600">Medium Risk</div>
          </div>
          <div class="text-center p-3 bg-red-50 rounded-lg">
            <div class="font-semibold text-red-800">70-100</div>
            <div class="text-gray-600">High Risk</div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="bg-white shadow-md rounded-lg border border-gray-200 p-12 text-center">
    <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
    </svg>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">No Risk Reports Yet</h3>
    <p class="text-gray-600 mb-6">Generate your first risk report by adding family health history and clicking the button above.</p>
    <a href="/history" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition font-medium">
      Add Family History
    </a>
  </div>
  <% } %>

  <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-blue-900 mb-2">Important Notice</h3>
    <p class="text-blue-800 text-sm">
      This risk assessment is for informational purposes only and should not replace professional medical advice.
      Please consult with a healthcare provider or genetic counselor for personalized medical guidance.
    </p>
  </div>
</div>
