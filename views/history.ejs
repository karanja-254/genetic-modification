<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Family Health History</h1>
    <p class="mt-2 text-gray-600">Track hereditary conditions across your family tree</p>
  </div>

  <% if (typeof success !== 'undefined' && success) { %>
  <div class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
    <%= success === 'added' ? 'Family history record added successfully!' : 'Record deleted successfully!' %>
  </div>
  <% } %>

  <% if (error) { %>
  <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
    <%= error %>
  </div>
  <% } %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-1">
      <div class="bg-white shadow-md rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Add New Record</h2>
        <form method="POST" action="/history/add" class="space-y-4">
          <div>
            <label for="disease_name" class="block text-sm font-medium text-gray-700 mb-1">
              Disease Name *
            </label>
            <input
              type="text"
              id="disease_name"
              name="disease_name"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="e.g., Diabetes, Heart Disease"
            />
          </div>

          <div>
            <label for="relative" class="block text-sm font-medium text-gray-700 mb-1">
              Relative *
            </label>
            <select
              id="relative"
              name="relative"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">Select relative</option>
              <option value="Mother">Mother</option>
              <option value="Father">Father</option>
              <option value="Sister">Sister</option>
              <option value="Brother">Brother</option>
              <option value="Grandmother">Grandmother</option>
              <option value="Grandfather">Grandfather</option>
              <option value="Aunt">Aunt</option>
              <option value="Uncle">Uncle</option>
              <option value="Cousin">Cousin</option>
            </select>
          </div>

          <div>
            <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
              Notes
            </label>
            <textarea
              id="notes"
              name="notes"
              rows="3"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="Additional details..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition font-medium"
          >
            Add Record
          </button>
        </form>
      </div>
    </div>

    <div class="lg:col-span-2">
      <div class="bg-white shadow-md rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Your Records (<%= historyItems.length %>)</h2>

        <% if (historyItems && historyItems.length > 0) { %>
        <div class="space-y-4">
          <% historyItems.forEach(item => { %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900"><%= item.disease_name %></h3>
                <p class="text-sm text-gray-600 mt-1">
                  <span class="font-medium">Relative:</span> <%= item.relative %>
                </p>
                <% if (item.notes) { %>
                <p class="text-sm text-gray-600 mt-2">
                  <span class="font-medium">Notes:</span> <%= item.notes %>
                </p>
                <% } %>
                <p class="text-xs text-gray-400 mt-2">
                  Added: <%= new Date(item.created_at).toLocaleDateString() %>
                </p>
              </div>
              <form method="POST" action="/history/delete/<%= item.id %>" class="ml-4">
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this record?')"
                  class="px-3 py-1 text-sm text-red-600 hover:text-red-800 hover:bg-red-50 rounded transition"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
          <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No records yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding your first family health record.</p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
